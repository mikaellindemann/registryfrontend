{{define "registries"}}
{{template "header" .}}
<div class="container-fluid">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</td>
                <th scope="col">URL</td>
                <th scope="col">Online</td>
                <th scope="col">Number of repos</td>
                <th scope="col">Actions</td>
            </tr>
        </thead>
        <tbody>
    {{range .Registries}}
            <tr>
                <th scope="row">
                    <a href="registry/{{.Name}}">{{.Name}}</a>
                </th>
                <td>
                    {{.Url}}
                </td>
                <td>
                    Unknown
                </td>
                <td>
                    Unknown
                </td>
                <td>
                    None
                </td>
            </tr>
    {{end}}
        </tbody>
    </table>
</div>
{{template "footer" .}}
{{end}}